@page
@model Pizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create Your Own Pizza!</h1>
    <hr/>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 rounded bg-light col-4">
        <div class="text-start">
            <input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name.." />
            <br />

            <input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce" />TomatoSauce
            <br />
            <input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" />Cheese
            <br />
            <input type="checkbox" asp-for="Pizza.Peporoni" placeholder="Peporoni" />Peporoni
            <br />
            <input type="checkbox" asp-for="Pizza.Mushroom" placeholder="Mushroom" />Mushroom
            <br />
            <input type="checkbox" asp-for="Pizza.Tuna" placeholder="Tuna" />Tuna
            <br />
            <input type="checkbox" asp-for="Pizza.Pineapple" placeholder="Pineapple" />Pineapple
            <br />
            <input type="checkbox" asp-for="Pizza.Chicken" placeholder="Chicken" />Chicken
            <br />
            <input type="checkbox" asp-for="Pizza.Paneer" placeholder="Paneer" />Paneer
            <br />
        </div>
        <button class="btn btn-primary mt-1" type="submit">Order My Pizza</button>
    </form>
</div>